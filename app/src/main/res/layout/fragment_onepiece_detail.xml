<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detail.OnepieceDetailFragment"
    android:background="#D2BEAB">


    <TextView
        android:id="@+id/onepiece_detail_characters"
        android:layout_width="408dp"
        android:layout_height="90dp"
        android:textAlignment="center"
        android:fontFamily="@font/onepiecefont"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageView
        android:id="@+id/onepiece_detail_img"
        android:layout_width="415dp"
        android:layout_height="324dp"
        android:layout_marginTop="76dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onepiece_detail_summary"
        android:layout_width="416dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onepiece_detail_img"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Bulbizarre" />

    <TextView
        android:id="@+id/onepiece_detail_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bulbizarre"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>